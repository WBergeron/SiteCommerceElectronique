{% extends 'core/base.html.twig' %}

{% block body %}
	{% include 'core/topbar.html.twig' %}
	{% include 'core/navbar.html.twig' %}

	<div class="container-fluid">
		<h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
			<span class="bg-secondary pr-3">Produits</span>
		</h2>
		<div class="row px-xl-5 justify-content-center">
			<div class="col-lg-9 mb-5">
				<div class="bg-light p-30">
					<table class="table table-light table-borderless table-hover text-center mb-0">
						<thead class="thead-dark">
							<tr>
								<th>#Produit</th>
								<th>Nom</th>
								<th>Catégorie</th>
								<th>Prix</th>
								<th>Détail</th>
							</tr>
						</thead>
						<tbody class="align-middle">
							{% for produit in listeProduits %}
								<tr>
									<td class="align-middle">
										{{produit.idProduit}}
									</td>
									<td>
										{{produit.name | u.truncate(30, '...')}}
									</td>
									<td>
										{{produit.categorie.categorie}}
									</td>
									<td>
										{{produit.getPrice() | round(2, 'floor')}}
										$
									</td>
									<td>
										<a href=" {{ path('app_adminModifierProduit', {idProduit : produit.idProduit}) }}">
											<div class="btn btn-sm bg-primary">
												<i class="fa-solid fa-pen-to-square"></i>
											</div>
										</a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
					<div class="d-flex justify-content-center">
						<div class="form-button mt-3">
							<a href="{{path('app_adminAjoutProduit')}}" type="button" class="btn btn-primary">Ajouter un Produit</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	{% include 'core/footer.html.twig' %}
{% endblock %}
